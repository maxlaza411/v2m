{
  "$id": "https://v2m.dev/schemas/tir#",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "V2M TIR",
  "type": "object",
  "additionalProperties": false,
  "required": ["v","lib","top","modules"],
  "properties": {
    "v": { "type": "string", "const": "tir-1.1" },
    "lib": { "type": "string" },
    "top": { "type": "string" },
    "modules": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/module" }
    }
  },
  "$defs": {
    "BitRef": {
      "description": "Reference to bits of a net or a constant",
      "oneOf": [
        { "type": "object", "additionalProperties": false,
          "required": ["net","lsb","msb"],
          "properties": {
            "net": { "type": "string" },
            "lsb": { "type": "integer", "minimum": 0 },
            "msb": { "type": "integer", "minimum": 0 }
          }
        },
        { "type": "object", "additionalProperties": false,
          "required": ["const","width"],
          "properties": {
            "const": { "type": "string", "pattern": "^(?:\\d+|0b[01_]+|0x[0-9A-Fa-f_]+)$" },
            "width": { "type": "integer", "minimum": 1 }
          }
        },
        { "type": "object", "additionalProperties": false,
          "required": ["concat"],
          "properties": {
            "concat": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/BitRef" }
            }
          }
        }
      ]
    },

    "instance": {
      "type": "object", "additionalProperties": false,
      "required": ["uid","cell","connections"],
      "properties": {
        "uid": { "type": "string" },
        "cell": { "type": "string" },
        "params": { "type": "object" },
        "connections": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/BitRef" }
        }
      }
    },

    "net": {
      "type": "object", "additionalProperties": false,
      "required": ["bits"],
      "properties": {
        "bits": { "type": "integer", "minimum": 1 },
        "attrs": { "type": "object" }
      }
    },

    "module": {
      "type": "object", "additionalProperties": false,
      "required": ["ports","nets","instances"],
      "properties": {
        "ports": { "type": "object", "additionalProperties": {
          "type": "object", "additionalProperties": false,
          "required": ["dir","bits"], "properties": {
            "dir":{"enum":["input","output","inout"]}, "bits":{"type":"integer","minimum":1}
          }
        }},
        "nets": { "type": "object", "additionalProperties": { "$ref": "#/$defs/net" } },
        "instances": { "type": "object", "additionalProperties": { "$ref": "#/$defs/instance" } }
      }
    }
  }
}
